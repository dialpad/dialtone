{
  "name": "dialtone",
  "implicitDependencies": [
    "dialtone-css",
    "dialtone-tokens",
    "dialtone-vue2",
    "dialtone-vue3",
    "eslint-plugin-dialtone",
    "stylelint-plugin-dialtone"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "gulp"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm publish"
      }
    },
    "release": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm semantic-release-plus --extends ./release.config.cjs",
        "parallel": false
      }
    },
    "test": {
      "executor": "nx:run-script",
      "options": {
        "script": "test:vue"
      }
    }
  }
}
