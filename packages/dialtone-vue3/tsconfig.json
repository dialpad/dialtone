{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "**/*.ts",
    "components/**/*",
    "components/**/*.vue",
    "recipes/**/*",
    "recipes/**/*.vue",
    "index.js",
    "emoji.js",
    "directives.js",
    "message_input.js"
  ],
  "exclude": [
    "**/*.story.vue",
    "**/*.stories.js",
    "**/*.test.js",
    "**/*.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  }
}
