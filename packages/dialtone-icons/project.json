{
  "name": "dialtone-icons",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          {
            "command": "gulp"
          },
          {
            "command": "nx run-many --target=build --projects=dialtone-icons-vue2,dialtone-icons-vue3 --parallel=2"
          }
        ],
        "parallel": false
      },
      "inputs": ["{projectRoot}/src/**/*", "{projectRoot}/transformSVGtoVue.cjs", "{projectRoot}/gulpfile.cjs"],
      "outputs": ["{projectRoot}/src/icons", "{projectRoot}/dist", "{projectRoot}/vue2/dist", "{projectRoot}/vue3/dist"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm publish --filter ./packages/dialtone-icons"
      }
    },
    "release-github": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm semantic-release-plus --extends ./packages/dialtone-icons/release-ci.config.cjs"
      }
    },
    "release-local": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm semantic-release-plus --no-ci --extends ./packages/dialtone-icons/release-local.config.cjs"
      }
    }
  }
}
