{
  "name": "dialtone-combinator",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "dialtone-css:build",
        "dialtone-icons:build",
        "dialtone-vue3:build"
      ],
      "inputs": [
        "{projectRoot}/src/**/*",
        "{projectRoot}/vite.config.js"
      ],
      "outputs": [ "{projectRoot}/dist" ],
      "options": {
        "cwd": "{projectRoot}",
        "command": "vite build"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "dialtone-css:build",
        "dialtone-icons:build",
        "dialtone-tokens:build",
        "dialtone-vue3:build"
      ],
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          {
            "command": "nx watch --projects=dialtone-css,dialtone-icons,dialtone-tokens,dialtone-vue3 --includeDependentProjects -- nx run \\$NX_PROJECT_NAME:build"
          },
          {
            "command": "vite"
          }
        ]
      }
    }
  }
}
