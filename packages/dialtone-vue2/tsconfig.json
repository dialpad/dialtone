{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "**/*.ts",
    "common/**/*",
    "common/**/*.vue",
    "directives/**/*",
    "components/**/*",
    "components/**/*.vue",
    "recipes/**/*",
    "recipes/**/*.vue",
    "index.js",
  ],
  "exclude": [
    "**/*.story.vue",
    "**/*.stories.js",
    "**/*.test.js",
    "**/*.d.ts",
    "common/storybook_utils.js",
    "common/v_html.js",
    "node_modules"
  ],
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declarationDir": "dist/types",
    "strict": true,
    "removeComments": true,
    "paths": {
      "@/*": ["./*"]
    }
  }
}
