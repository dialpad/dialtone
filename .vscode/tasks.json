{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start: dialtone docsite",
      "type": "shell",
      "command": "pnpm nx run dialtone-documentation:start",
      "problemMatcher": [
        "$vite"
      ],
      "isBackground": true
    },
    {
      "label": "start: dialtone vue 2 storybook",
      "type": "shell",
      "command": "pnpm nx run dialtone-vue2:start",
      "problemMatcher": [
        "$vite"
      ],
      "isBackground": true
    },
    {
      "label": "start: dialtone vue 3 storybook",
      "type": "shell",
      "command": "pnpm nx run dialtone-vue3:start",
      "problemMatcher": [
        "$vite"
      ],
      "isBackground": true
    },
    {
      "label": "lint: all",
      "type": "shell",
      "command": "pnpm nx run dialtone:lint:all",
      "problemMatcher": [
        "$eslint-stylish"
      ]
    },
    {
      "label": "test: all",
      "type": "shell",
      "command": "pnpm nx run dialtone:test:all",
      "problemMatcher": []
    },
    {
      "label": "build: all",
      "type": "shell",
      "command": "pnpm nx run dialtone:build",
      "problemMatcher": []
    }
  ]
}
